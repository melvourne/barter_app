
<%= image_tag @post.photo.url(:medium) %>
<h1> <%= @post.title %> </h1>
<p> <%= @post.description %> </p>
<p> Posted by <%= @post.user.name %> in <%= @post.suburb %> about <%= time_ago_in_words(@post.created_at) %> ago </p>


<h2> <%= comment_count= pluralize(@post.comments.count, "Comment") %>   </h2>
  <% @comments.each do |comment| %>
    <p> <%= username= comment.user.name %> : <%= content= comment.content %> </p>

<% end %>

<%= render 'comments/form' %>


<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Destroy', post_path(@post), method: :delete, data: { confirm: "Are you sure" } %>
<%= link_to 'Home', root_path %>
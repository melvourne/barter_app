
<%= image_tag @post.photo.url(:medium) %>
<h1> <%= @post.title %> </h1>
<p> <%= @post.description %> </p>
<p> Posted by <%= @post.user.name %> in <%= @post.suburb %> about <%= time_ago_in_words(@post.created_at) %> ago </p>


<p> <%= comment_count= pluralize(@post.comments.count, "Response") %>   </p>
  <% @comments.each do |comment| %>
    <p> <%= username= comment.user.name %> : <%= content= comment.content %> </p>

  <% end %>

<%= render 'comments/form' %>

<%= link_to "Back", request.referer.present? ? request.referer : default_path %>
<%= link_to 'Home', root_path %>